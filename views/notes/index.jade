extends ../layout

block content
    h1.
         #{title}
    ul
        - each note, i in notes
            li
                = note.title
                = note._id
                form(action='/notes/#{note._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p 
                    a(href='/notes/#{note._id}/edit') Edit
                p
                    a(href='/notes/#{note._id}') Show