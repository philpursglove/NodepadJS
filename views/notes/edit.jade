extends ../layout

block content
    h1.
        Note ID #{note._id}
    form#updateNote(action='/notes/#{note._id}/edit',method='post',name='updatenote',enctype='application/x-www-form-urlencoded')
        p Title: 
            input#inputName(type='text', value='#{note.Title}', name='title' required)
        p Note: 
            textarea#inputBadge(name='note' cols='40' rows='5' required)
                | #{note.NoteText}
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
        script.
            $('#updatenote').validate()